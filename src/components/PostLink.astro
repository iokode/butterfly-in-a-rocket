---
import type { PostResume } from "../models/Post";

interface Props {
    post: PostResume;
}

const post = Astro.props.post;
---

<a href={`/posts/${post.slug}`}>
    <h1 class="title">{post.title}</h1>
    <div class="author">Publicado por {post.author.name}</div>
    <div class="date">{post.publishDate.toLocaleDateString()}</div>
</a>

<style lang="scss">
    @use "../styles/variables/colors";

    a {
        display: flex;
        flex-wrap: wrap;
        align-items: baseline;
        gap: 20px;
        color: inherit;

        h1 {
            width: 100%;
            margin: 0;
        }

        &:hover {
            text-decoration: none;
            border: 4px solid;

            margin-left: -24px;
            margin-right: -24px;
            margin-top: -14px;
            margin-bottom: -14px;
            padding-left: 20px;
            padding-right: 20px;
            padding-top: 10px;
            padding-bottom: 10px;

            @media (prefers-color-scheme: light) {
                border-color: colors.$light-border;
            }
            @media (prefers-color-scheme: dark) {
                border-color: colors.$dark-border;
            }
        }
    }
</style>
