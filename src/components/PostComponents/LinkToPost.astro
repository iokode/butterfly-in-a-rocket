---
import type { PostResume } from "../../models/Post";

interface Props {
    post: PostResume;
}

const post = Astro.props.post;
---

<a href={`/posts/${post.slug}`}>
    <div class="title">{post.title}</div>
    <time>{post.publishDate.toISOString().split('T')[0]}</time>
    <div class="author">
        <img src={`https://github.com/${post.author.username}.png?size=20`} alt={`GitHub avatar of ${post.author.username}`} /> {post.author.name}
    </div>
</a>
</a>

<style lang="scss">
    @use "../../styles/variables/colors";
    @use "../../styles/variables/fonts";

    a {
        margin-left: .5em;
        margin-right: .5em;
        display: flex;
        flex-wrap: wrap;
        color: inherit;

        .title {
            font-family: fonts.$titles;
            font-size: 1.5em;
            width: 100%;
            margin: 0;
        }

        .author {
            margin-left: 1em;
            img {
                vertical-align: middle;
            }
        }

        &:hover {
            text-decoration: none;
            border: 4px solid;
            @include colors.property('border-color', 'border');

            margin-left: calc(-0.5em - 4px);
            margin-right: calc(-0.5em - 4px);
            margin-top: calc(-0.5em - 4px);
            margin-bottom: calc(-0.5em - 4px);
            padding-left: 1em;
            padding-right: 1em;
            padding-top: 0.5em;
            padding-bottom: 0.5em;
        }
    }
</style>
