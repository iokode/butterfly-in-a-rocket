---
import { getImage } from "astro:assets";
import darkIOKodeLogo from '../../assets/images/dark/iokode.svg'
import lightIOKodeLogo from '../../assets/images/light/iokode.svg'

const darkImage = await getImage({
    src: darkIOKodeLogo,
    width: 800,
});

const lightImage = await getImage({
    src: lightIOKodeLogo,
    width: 800
});

// Remove width and height attributes from the image to avoid mobile layout shift.
const {width: darkWidth, height: darkHeight, ...darkImageAttributes} = darkImage.attributes;
const {width: lightWidth, height: lightHeight, ...lightImageAttributes} = lightImage.attributes;
---

<picture id={Astro.props.id} class={Astro.props.class}>
    <source media="(prefers-color-scheme: dark)" srcset={darkImage.src} {...darkImageAttributes} />
    <img src={lightImage.src} {...lightImageAttributes} alt="IOKode Logo" />
</picture>
