---
import type {CollectionEntry} from 'astro:content';
import {getImage} from "astro:assets";

interface Props {
    post: CollectionEntry<'posts'>;
}

const post = Astro.props.post;
const data = post.data;
const avatar = await getImage({
    src: `https://github.com/${data.author}.png?size=60`,
    formats: ['webp'],
    inferSize: true,
    quality: 'max',
});
---

<a href={`/posts/${data.slug}`}>
    <div class="title">{data.title}</div>
    <div class="author">
        <img src={avatar.src} alt={`GitHub avatar of ${data.authorName}`}/> {data.authorName}
    </div>
    <time>{data.publishDate.toDateString()}</time>
    {data.series && <span class="series">Part of the <strong>{data.series}</strong> series</span>}
    <span class="license">{data.license}</span>
</a>

<style lang="scss">
    @use "../styles/variables/borders";
    @use "../styles/variables/colors";
    @use "../styles/variables/fonts";

    a {
        // Boxing
        display: flex;
        margin-left: .5em;
        margin-right: .5em;

        // Style
        text-decoration: none;

        // Flex
        flex-wrap: wrap;
        gap: 0.5em;

        // Typography
        color: inherit;

        .title {
            // Boxing
            width: 100%;
            margin: 0;

            // Typography
            font-family: fonts.$titles;
            font-size: 1.5em;
        }

        .author {
            // Boxing
            display: flex;

            // Flex
            gap: .2em;
            align-items: center;

            img {
                // Boxing
                width: 1em;
            }
        }
        
        .author, time, .license, .series {
            border: borders.$default;
            padding: 0 .5em;
        }

        &:hover {
            // Boxing
            margin: calc(-0.5em - 4px);
            padding: 0.5em 1em;

            // Typography
            border-color: var(--color-link);

            // Style
            text-decoration: none;
            border: borders.$large;
        }
    }
</style>
